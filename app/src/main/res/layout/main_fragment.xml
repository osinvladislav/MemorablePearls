<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.menu.main.MainFragment">

    <ScrollView
        android:id="@+id/scroll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/scroll_layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/text_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_condensed_bold"
                android:gravity="center"
                android:layout_marginBottom="2dp"
                android:text="Добрый вечер!"
                android:textSize="28sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                style="@style/Widget.MaterialComponents.CardView"
                android:id="@+id/card_mp_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_medium"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/color_01"
                app:cardCornerRadius="8dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="10dp">

                <LinearLayout
                    android:id="@+id/layout_mp_today"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/roboto"
                        android:text=""
                        android:textColor="@color/color_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_verse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text=""
                        android:textColor="@color/color_text"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/text_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text=""
                        android:textColor="@color/color_text"
                        android:textSize="16sp"
                        android:textStyle="italic" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_condensed_bold"
                android:paddingStart="6dp"
                android:text="Что хотите сделать?"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_open_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_medium"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:text="Открыть Памятные Жемчужины за этот квартал"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/color_text_light"
                android:textSize="16sp"
                tools:ignore="UnusedAttribute" />

            <View
                android:id="@+id/divider_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="6dp"
                android:background="@android:color/darker_gray"
                android:padding="8dp" />

            <TextView
                android:id="@+id/text_trans_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_medium"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:text="Тренировать текущую Памятную Жемчужину"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/color_text_light"
                android:textSize="16sp"
                tools:ignore="UnusedAttribute" />

            <View
                android:id="@+id/divider_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="6dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/text_check_know"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_medium"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:text="Проверить свои знания"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/color_text_light"
                android:textSize="16sp"
                tools:ignore="UnusedAttribute" />

            <View
                android:id="@+id/divider_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="6dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/text_switch_translate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_medium"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:text="Изменить стандартный перевод Библии"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/color_text_light"
                android:textSize="16sp"
                tools:ignore="UnusedAttribute" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>